<Window
    x:Class="FamilyImageExporter.Views.FamilyImageExporterView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:viewModel="clr-namespace:FamilyImageExporter.ViewModels"
    xmlns:converters="clr-namespace:FamilyImageExporter.Views.Converters"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance viewModel:FamilyImageExporterViewModel}"
    ResizeMode="CanResize"
    WindowStartupLocation="CenterScreen"
    Title="Family Image Exporter"
    Height="350"
    Width="700"
    MinHeight="350"
    MinWidth="600">
    <Window.Resources>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <converters:BooleanHiddenVisibilityConverter x:Key="BooleanVisibilityConverter"/>
    </Window.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock
            Grid.Row="0"
            Text="Family Thumbnail Exporter"
            FontSize="24"
            FontWeight="Bold"
            Margin="0,0,0,20"
            HorizontalAlignment="Center"/>

        <!-- Source Folder -->
        <TextBlock
            Grid.Row="1"
            Text="Source Folder (containing .rfa files):"
            Margin="0,0,0,5"
            VerticalAlignment="Center"/>
        <Grid Grid.Row="2" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox
                Grid.Column="0"
                Text="{Binding SourceFolderPath, UpdateSourceTrigger=PropertyChanged}"
                IsReadOnly="True"
                Margin="0,0,10,0"
                VerticalContentAlignment="Center"
                Padding="5"/>
            <Button
                Grid.Column="1"
                Content="Browse..."
                Command="{Binding SelectSourceFolderCommand}"
                Padding="15,5"
                MinWidth="80"/>
        </Grid>

        <!-- Output Folder -->
        <TextBlock
            Grid.Row="3"
            Text="Output Folder (for thumbnails):"
            Margin="0,0,0,5"
            VerticalAlignment="Center"/>
        <Grid Grid.Row="4" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox
                Grid.Column="0"
                Text="{Binding OutputFolderPath, UpdateSourceTrigger=PropertyChanged}"
                IsReadOnly="True"
                Margin="0,0,10,0"
                VerticalContentAlignment="Center"
                Padding="5"/>
            <Button
                Grid.Column="1"
                Content="Browse..."
                Command="{Binding SelectOutputFolderCommand}"
                Padding="15,5"
                MinWidth="80"/>
        </Grid>

        <!-- Export Button -->
        <Button
            Grid.Row="5"
            Content="Export Thumbnails"
            Command="{Binding ExportCommand}"
            Padding="20,10"
            FontSize="14"
            FontWeight="Bold"
            Margin="0,0,0,15"
            HorizontalAlignment="Center"
            MinWidth="200"/>

        <!-- Progress Bar -->
        <ProgressBar
            Grid.Row="6"
            Value="{Binding ProgressValue}"
            Maximum="100"
            Height="25"
            Margin="0,0,0,10"
            Visibility="{Binding IsExporting, Converter={StaticResource BooleanVisibilityConverter}}"/>

        <!-- Status Message -->
        <TextBlock
            Grid.Row="7"
            Text="{Binding StatusMessage}"
            TextWrapping="Wrap"
            VerticalAlignment="Center"
            Margin="0,5,0,0"
            FontStyle="Italic"
            Foreground="Gray"/>
    </Grid>
</Window>